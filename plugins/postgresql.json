{
  "name": "postgresql",
  "version": "0.0.1",
  "match": "^postgresql(_[0-9]+)?$",
  "readme": "To initialize the database run `initdb`.",
  "env": {
    "PGDATA": "{{ .Virtenv }}/data",
    "PGHOST": "{{ .Virtenv }}"
  },
  "create_files": {
    "{{ .Virtenv }}/data": ""
  },
  "services": {
    "postgresql": {
      "start": "pg_ctl start -l {{ .Virtenv }}/logfile -o \"-k {{ .Virtenv }}\"",
      "stop": "pg_ctl stop"
    }
  }
}
