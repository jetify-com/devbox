{
  "packages": [
    "mariadb@latest"
  ],
  "shell": {
    "init_hook": [],
    "scripts": {
      "connect_db": [
        "mysql -u devbox_user -p -D devbox_lamp"
      ],
      "test_db_setup": [
        "mkdir -p /tmp/devbox/mariadb/run",
        "export MYSQL_UNIX_PORT=/tmp/devbox/mariadb/run/mysql.sock",
        "devbox services up -b",
        "sleep 5",
        "mysql -u root < setup_db.sql",
        "devbox services stop"
      ],
      "start": [
        "mkdir -p /tmp/devbox/mariadb/run",
        "export MYSQL_UNIX_PORT=/tmp/devbox/mariadb/run/mysql.sock", 
        "devbox services up -b"
      ]
    }
  }
}