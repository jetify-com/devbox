{
    "packages": [
        "curl",
        "postgresql",
        "php81",
        "php81Extensions.pgsql",
        "apacheHttpd"
    ],
    "env": {
      "PGPORT": "5432"
    },
    "shell": {
        "scripts": {
            "init_db": "initdb",
            "create_db": [
                "dropdb --if-exists devbox_lapp",
                "createdb devbox_lapp",
                "psql devbox_lapp < setup_postgres_db.sql"
            ],
            "run_test": [
                "set -e",
                "initdb",
                "devbox services start",
                "devbox run create_db",
                "curl localhost:$HTTPD_PORT",
                "devbox services stop"
            ]
        }
    }
}
