{
    "packages": [
        "bundler@latest",
        "ruby@3.1",
        "libffi@latest",
        "gcc@latest", // for building gem ruby_http_parser.c (and maybe others)
    ],
    "shell": {
        "init_hook": [],
        "scripts": {
            "generate": [
                "gem install jekyll --version \"~> 3.9.2\" --no-document",
                "cd myblog",
                "bundle update",
                "bundle lock",
                "bundle package",
                "rm -rf vendor"
            ],
            "run_test": [
                "cd myblog",
                "devbox run generate",
                "bundler exec $GEM_HOME/bin/jekyll build --trace"
            ],
            "serve": [
                "cd myblog",
                "bundler exec $GEM_HOME/bin/jekyll serve --trace"
            ]
        }
    }
}
