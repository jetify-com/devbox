{
  "packages": {
    "ruby":    "3.3",
    "bundler": "2.5",
    "nodejs":  "21",
    "yarn":    "1.22",
    "curl":    "latest",
    "sqlite":  "latest",
    "gcc":    "latest",
  },
  "shell": {
    "init_hook": [
      "gem install rails",
      "./blog/bin/bundle install",
      "./blog/bin/rails -f ./blog/Rakefile db:prepare"
    ],
    "scripts": {
      "run_test":     ["./blog/bin/rails test"],
      "start_server": ["./blog/bin/rails server"]
    }
  }
}
