{
    "packages": [
        "curl",
        "postgresql",
        "php81",
        "nginx",
        "php81Extensions.pgsql"
    ],
    "env": {
      "PGPORT": "5433"
    },
    "shell": {
        "scripts": {
            "init_db": "initdb",
            "create_db": [
                "dropdb --if-exists devbox_lepp",
                "createdb devbox_lepp",
                "psql devbox_lepp < setup_postgres_db.sql"
            ],
            "run_test": [
                "set -e",
                "initdb",
                "devbox services start",
                "devbox run create_db",
                "curl localhost:8089",
                "devbox services stop"
            ]
        }
    }
}
