{
  "packages": [
    "curl@8.0",
    "postgresql@14",
    "php@8.1",
    "php81Extensions.pgsql@latest",
    "nginx@latest"
  ],
  "env": {
    "NGINX_WEB_ROOT": "../../../my_app",
    "PGHOST": "/tmp/devbox/lepp"
  },
  "shell": {
    "init_hook": [
      "test -r .devbox/ports || echo \"export PGPORT=$(devbox services free-port)\nexport NGINX_WEB_PORT=$(devbox services free-port)\" > .devbox/ports",
      ". $PWD/.devbox/ports",
    ],
    "scripts": {
      "create_db": [
        "dropdb --if-exists devbox_lepp",
        "createdb devbox_lepp",
        "psql devbox_lepp < setup_postgres_db.sql"
      ],
      "init_db": "initdb",
      "run_test": [
        "mkdir -p /tmp/devbox/lepp",
        "rm -rf .devbox/virtenv/postgresql/data",
        "initdb",
        "devbox services up -b",
        "echo 'sleep 5 second for the postgres server to initialize.' && sleep 5",
        "dropdb --if-exists devbox_lepp",
        "createdb devbox_lepp",
        "psql devbox_lepp < setup_postgres_db.sql",
        "curl localhost:$NGINX_WEB_PORT",
        "devbox services stop"
      ]
    }
  }
}
