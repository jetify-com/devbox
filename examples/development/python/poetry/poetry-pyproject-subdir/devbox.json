{
  "packages": [
    "poetry@latest",
    "python3@latest"
  ],
  "env": {
    "DEVBOX_PYPROJECT_DIR": "$PWD/service"
  },
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "install-service":[
        "cd service",
        "poetry install"
      ],
      "run_test": [
        "devbox run install-service",
        "cd service && poetry run pytest"
      ]
    },
    "exclude_cc_toolchain": true
  }
}
