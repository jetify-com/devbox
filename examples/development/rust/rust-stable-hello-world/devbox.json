{
    "packages": [
        "rustup@latest",
        "libiconv@latest",
        "gcc@latest",
    ],
    "env": {
      "PROJECT_DIR": "$PWD"
    },
    "shell": {
        "init_hook": [
            ". conf/set-env.sh",
            "rustup default stable",
            "cargo fetch"
        ],
        "scripts": {
            "build-docs": "cargo doc",
            "start": "cargo run",
            "run_test": [
                "cargo test -- --show-output"
            ]
        }
    }
}
