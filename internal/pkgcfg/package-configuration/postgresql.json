{
  "name": "postgresql",
  "version": "0.0.1",
  "match": "^postgresql(_[0-9]+)?$",
  "readme": "To initialize the database run `initdb`.",
  "env": {
    "PGDATA": "{{ .DevboxRoot }}/conf/postgresql/data"
  },
  "create_files": {
    ".devbox/conf/postgresql/data": ""
  },
  "services": {
    "postgresql": {
      "start": "pg_ctl -l .devbox/conf/postgresql/logfile start",
      "stop": "pg_ctl stop"
    }
  }
}
